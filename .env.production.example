# Production environment variables
# Copy to .env.production and fill in values

# Database
DATABASE_PATH=/opt/dostobot/data/dostobot.db
VECLITE_PATH=/opt/dostobot/data/quotes.veclite

# API Keys (required)
ANTHROPIC_API_KEY=sk-ant-your-key
OPENAI_API_KEY=sk-proj-your-key

# Bluesky (required for posting)
BLUESKY_HANDLE=your-handle.bsky.social
BLUESKY_APP_PASSWORD=your-app-password

# Reddit (optional - for trend monitoring)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=dostobot:v1.0.0

# Logging
LOG_LEVEL=info

# Scheduler (production settings)
MONITOR_INTERVAL=30m
POST_INTERVAL=4h
MAX_POSTS_PER_DAY=6

# Notifications (optional)
NOTIFY_HANDLE=
